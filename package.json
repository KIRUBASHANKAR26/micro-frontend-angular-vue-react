{
  "name": "@Microfrontend/root-config",
  "scripts": {
    "root:config": "webpack serve --port 9000 --env isLocal",
    "angular": "cd angular-app && npm run start",
    "install:angular": "cd angular-app && npm install",
    "react": "cd react-app && npm run start",
    "install:react": "cd react-app && npm install",
    "vue": "cd vue-header && npm run serve",
    "install:vue": "cd vue-header && npm install",
    "start": "concurrently \"npm run vue\"  \"npm run react\"  \"npm run angular\"  \"npm run root:config\" ",
    "lint": "eslint src --ext js,ts,tsx",
    "postinstall": "concurrently \"npm run install:angular\" \"npm run install:react\" \"npm run install:vue\"",
    "test": "cross-env BABEL_ENV=test jest --passWithNoTests",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "prepare": "husky install",
    "build": "concurrently yarn:build:*",
    "build:webpack": "webpack --mode=production",
    "build:types": "tsc"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.15.3",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-ts-important-stuff": "^1.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "jest": "^27.0.6",
    "jest-cli": "^27.0.6",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "serve": "^12.0.0",
    "ts-config-single-spa": "^3.0.0",
    "typescript": "^4.3.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.8.0",
    "webpack-config-single-spa-ts": "^4.0.0",
    "webpack-dev-server": "^4.0.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@types/jest": "^27.0.1",
    "@types/systemjs": "^6.1.1",
    "@types/webpack-env": "^1.16.2",
    "single-spa": "^5.9.3",
    "single-spa-layout": "^1.6.0"
  },
  "types": "dist/Microfrontend-root-config.d.ts"
}